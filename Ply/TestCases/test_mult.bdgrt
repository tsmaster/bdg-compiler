void print_float(float num);
void print_integer(int num);
void print_line();

@include "assert.bdgrt"

float f_offset = -32.0;

int disp(float x) {
  print_float(x);
  print_line();
  return 0;
}

int disp_i(int x) {
  print_integer(x);
  print_line();
  return 0;
}

int convert_temp(float f) {
  disp(f);
  float x = (f + f_offset) * 5.0 / 9.0;
  disp(x);
  return 0;
}  

int main() {
  # test some floating point math
  float x = 1.5;
  disp(x);
  x = 3.2; disp(x);
  x = x * 10.0; disp(x);
  x = x / 5.0; disp(x);

  print_line();

  # test floating point in functions
  convert_temp(70.0);

  print_line();

  # test local variables

  int a = 1;
  if (a > 0) {
    int b;
    b = 2;
    if (b > 0) {
      int a = 7;
      b = b + a;
      assert_equal(b, 9);      
    }
    a = a + b;
  }
  assert_equal(a, 10);
  disp_i(a);
}