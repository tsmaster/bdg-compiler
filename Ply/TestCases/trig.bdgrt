# TODO: move these to a math library
int sgn(int x) {
  if (x < 0) {
    return -1;
  } elif (x > 0) {
    return 1;
  } else {
    return 0;
  }
}

int abs(int v) {
  if (v < 0) {
    return -v;
  } else {
    return v;
  }
}